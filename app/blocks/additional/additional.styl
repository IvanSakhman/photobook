.additional
  display block
  width 100%
  &__wrapper
    width 1080px
    margin 0 auto
    padding-top 90px
  &__container
    width 100%
    display flex
    justify-content space-between
  &__item
    border-radius 10px 10px 0 0
    background-color #ffd200
    width 315px
    min-height 310px
  &__name
    font-size 36px
    font-weight 300
    font-variant small-caps
    text-align center
    margin 20px auto
  &__box
    min-height 236px
    background-color #f7f0e6
  &__info
    width 240px
    margin 0 auto
    padding-top 30px
  &__desc
    padding-bottom 20px
    line-height 20px
    font-size 18px
    font-weight 400
    &_red
        color #e11a27
  &__list
    list-style circle
  &__elem
    padding-bottom 20px
    margin-left 20px
  &__make
    font-size 19px
    font-weight 100
    text-transform uppercase
    -webkit-appearance none
    -moz-appearance none
    background-color #e11a27
    border-radius 10px
    color #fff
    border 1px solid transparent
    padding 25px 36px
    display block
    margin 75px auto 0
    margin-bottom 110px
    &:hover
      border 1px solid #e11a27
      color #e11a27
      background-color #fff