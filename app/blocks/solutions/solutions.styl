.solutions
	display block
	width 100%
	&__wrapper
		width 1080px
		margin 0 auto
		padding 75px 0
	&__title
		font-size 60px
		font-weight 100
		font-variant small-caps
		text-align center
	&__block
		margin-top 85px
		display flex
		justify-content space-between
	&__item
		background-color #ffd200
		border-radius 10px
		width 313px
		min-height 435px
	&__name
		font-size 36px
		font-weight 400
		font-variant small-caps
		text-align center
		margin-top 40px
	&__box
		background-color #fff
		width 305px
		min-height 255px
		margin 45px auto 0
		position relative
	&__checklist
		margin-left 65px
		padding-bottom 30px
	&__elem
		padding-top 20px
		position relative
		&:after
			content ""
			background-image url("../../img/check.png")
			width 20px
			height 20px
			display block
			position absolute
			top 17px
			left -37px
	&__price
		font-size 60px
		font-weight 300
		position absolute
		bottom 20px
		left 50%
		transform translateX(-50%)
	&__make
		font-variant small-caps
		font-size 22px
		font-weight 100
		font-family Arial, sans-serif
		-webkit-appearance none
		-moz-appearance none
		border 2px solid transparent
		border-radius 10px
		padding 5px 10px
		background-color transparent
		display block
		margin 10px auto 0
		&:hover
			border 2px solid #000
