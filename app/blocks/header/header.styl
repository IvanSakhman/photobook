.header
  display block
  width 100%
  height 80px
  &__wrapper
    width 1080px
    margin 0 auto
    position relative
  &__pic
    width 162px
    position absolute
    top 30px
  &__logo
    width 100%
  &__block
    position absolute
    right 0
    top 50%
    transform translateY(50%)
  &__contact
    font-size 16px
    font-weight 300
    text-transform uppercase
    background-color #ffd200
    border-radius 10px
    padding 11px 38px
    float left
  &__login
    height 29px
    width 33px
    background url("../../img/login.png") no-repeat
    background-size cover
    border none
    -webkit-appearance none
    -moz-appearance none
    appearance none
    float right
    margin 4px 56px