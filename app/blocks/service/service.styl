.service
  display block
  width 100%
  min-height 365px
  &__wrapper
    padding-top 55px
    width 1080px
    margin 0 auto
    display flex
    justify-content space-between
  &__item
    width 140px
  &__box
    width 140px
    height 140px
    border 5px solid #ffd200
    border-radius 50%
    display flex
    justify-content center
    align-items center
    position relative
    &:after
      content ""
      display block
      background url("../../img/dashed.png")
      height 5px
      width 130px
      position absolute
      left 156px
    &_last
      &:after
        display none
  &__desc
    text-align center
    width 100%
    margin-top 25px
    font-size 24px
    font-weight 300
    line-height 30px

